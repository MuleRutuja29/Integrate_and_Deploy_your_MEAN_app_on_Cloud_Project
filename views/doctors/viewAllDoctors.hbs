<body style="background-image:url('/images/doctor-bg.jpg');background-repeat: no-repeat; background-size: cover">
    <h1>All Doctors</h1>

    <!-- Search form -->
     <form action="/doctors/search" method="GET">
        <label style="color: floralwhite; font-size: xx-large;" for="search">Search by Name:</label>
        <input type="text" id="search" name="search" placeholder="Enter doctor's name">
        <button type="submit"  class="btn btn-primary">Search</button>
    </form> 
    <ul>
            {{#each doctors}}
                <li>
                    <a style="color: floralwhite;font-size: xx-large;" href="/doctors/{{this._id}}">{{this.name}}</a>
                </li>
            {{/each}}
    </ul>          







