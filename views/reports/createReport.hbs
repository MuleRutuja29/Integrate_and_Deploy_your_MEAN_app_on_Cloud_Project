 <div class="container">
        <h1 style="font-size: xx-large;
    color:bisque;">Create Patient Report</h1>
        <form action="/reports/createReport" method="POST">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                    <label style="color: white;" for="patientName">Patient Name:</label>
                    <input type="text" autocomplete="off" class="form-control" id="patientName" placeholder="Enter name" name="patientName" required>
                    </div>
                </div>
            </div>  
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                    <label style="color: white;" for="patientEmail">Patient Email:</label>
                    <input type="email" autocomplete="off" class="form-control" id="patientEmail" placeholder="Enter patientEmail" name="patientEmail" required>
                    </div>
                </div>
            </div>  
            <div>
                    <label for="status">Status:</label>
                    <select id="status" name="status" required>
                        <option value="pending">Pending</option>
                        <option value="approved">Approved</option>
                        <option value="rejected">Rejected</option>
                        <option value="completed">Completed</option>
                    </select>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                    <label style="color: white;" for="reportText">Report Text:</label>
                    <textarea type="text" autocomplete="off" class="form-control" id="reportText" 
                    placeholder="Enter reportText" name="reportText"></textarea>
                    </div>
                </div>
            </div>   
           
            <div class="row">
                <div class="com-md-6">
                      <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
         </form>    
